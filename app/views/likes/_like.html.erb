<% if current_user.nil? %>
    <div class="btn border n-btn">
    <%= image_tag("icon_heart.png") %>
    <span>
    いいね!
    <%= goalpost.likes_count %>
    </span>
    </div>
<% else %>

    <% if goalpost.user_id != current_user.id  %>
        <div class="like-link" id="like-link-<%= goalpost.id %>">
            <% if goalpost.like_user(current_user.id) %>
            <%= button_to goalpost_like_path(likes, goalpost_id: goalpost.id), class: "like-btn", method: :delete, remote: true do %> 
                <%= image_tag("icon_red_heart.png") %>
                <span>
                いいね!
                <%= goalpost.likes_count %>
                </span>
            <% end %>
            <% else %>
            <%= button_to goalpost_likes_path(goalpost), class: "like-btn", remote: true do %>  
                <%= image_tag("icon_heart.png") %>
                <span>
                いいね!
                <%= goalpost.likes_count %>
                </span>
            <% end %>
            <% end %>
        </div>
    <% else %>
        <div class="btn border n-btn">
        <%= image_tag("icon_heart.png") %>
        <span>
        いいね!
        <%= goalpost.likes_count %>
        </span>
        </div>
    <% end %>

<% end %>