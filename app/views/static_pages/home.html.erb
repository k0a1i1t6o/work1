          <div class="section-title py-3">
            <h3 class="mb-0">みんなの投稿</h3>
            <hr>
          </div>
          <div class="container">
          <div class="row">
          <% @goalposts.each do |goalpost| %>
          <%= render partial: 'goalposts/goalpost_feed', locals: {goalpost: goalpost} %>
          <% end %>
          </div>
          </div>
        </div>
    </div>
</div>
</div>