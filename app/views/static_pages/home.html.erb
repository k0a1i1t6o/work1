    <div class="container">
      <div class="row">
        <div class="col-md-12 Box btn btn-dark btn-lg">
          <%= link_to "", "/set", method: :get %>
          <div>
            <p style="font-size: 16px;">目標を設定する</p>
            <%= fa_icon("calendar 3x") %>
          </div>
        </div>
      </div>
    </div>
</div>
<div class="pt-5">
<div class="container">
    <div class="row">
