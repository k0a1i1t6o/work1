<% provide(:title, @user.name) %>
<% breadcrumb :user, @user %>

<div class="position-fixed r-32 b-32" style="z-index: 10;">
    <div class="container">
      <div class="row">
        <div class="col-md-12 Box btn btn-dark btn-lg">
          <%= link_to "", "/set", method: :get %>
          <div>
            <p style="font-size: 16px;">目標を設定する</p>
            <%= fa_icon("calendar 3x") %>
          </div>
        </div>
      </div>
    </div>
</div>

<div class="pb-5" >
  <div class="container">
    <div class="row">
    <div class="text-center col-md-10 mx-auto px-5 shadow" style="background-color: white; border-radius: 8px;">
      <div class="pt-5">
        <% if @user.picture? %>
          <%= image_tag @user.picture.thumb100.url, class:"rounded-circle user-img" %>
        <% else %>
          <%= image_tag 'no-image.png', size:'70x70', class:"rounded-circle" %>
        <% end %>
        <h6 class="py-3 mx-auto border-bottom"><%= @user.name %></h6>
      </div>
      <div class="col- col-md-11 pb-1" style="">
        <h6 class="text-left">自己紹介</h6>
        <p class="text-left"> よろしくお願いします </p>
      </div>



          <ul class="nav nav-tabs">
            <li class="nav-item w-50" >
              <div class="nav-link text-center active show" href="" data-toggle="pill" data-target="#tabone">
                目標一覧
              </div>
            </li>
            <li class="nav-item w-50 text-center">
              <div href="" class="nav-link" data-toggle="pill" data-target="#tabtwo">
              いいねリスト
              </div>
            </li>
          </ul>
          <div class="tab-content border mb-4" style="border-top: none !important;">
            <div class="tab-pane fade active show" id="tabone" role="tabpanel">
              <div class="container">
              <div class="row pt-3">
              <% if @goalposts.empty? %>
              <div class="col-md-12 text-center py-5" style="opacity: 0.6;">
                <%= fa_icon("check 5x", style:"color:grey;") %>
                <p class="mt-3" style="color:grey;">目標がありません</p>
              </div>
              <% else %>
              <%= render @goalposts %>
              <% end %>
              </div>
              </div>
            </div>
            <div class="tab-pane fade" id="tabtwo" role="tabpanel">
              <div class="container">
                <div class="row pt-3">
                  <% if @like.empty? %>
                  <div class="col-md-12 text-center py-5" style="opacity: 0.6;">
                    <%= fa_icon("heart-o 5x", style:"color:grey;") %>
                    <p class="mt-3" style="color:grey;">いいねした目標がありません</p>
                  </div>
                  <% else %>
                  <%= render partial: 'goalposts/goalpost_like', locals: {like: @like} %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          



      </div>
    </div>
  </div>
</div>