  <div class="py-5 text-center border-top" >
    <div class="container">
      <div class="w-75 mx-auto " style="background-color: whitesmoke">
        <h4 class="border-bottom mx-auto col-md-12 py-4">会員情報入力</h4>
        <div class="mx-auto py-3 col-lg-6 col-10">
          <div class="text-left">
            <%= form_for(@user, url: signup_path) do |f| %>
                <%= render 'shared/error_messages' %>
                <div class="py-3">
                    <%= f.label :name, "ニックネーム"%>
                    <%= f.text_field :name, class: "form-control", placeholder: "例) もっちー" %>
                </div>
                <div class="py-3">
                    <%= f.label :email, "メールアドレス"%>
                    <%= f.email_field :email, class: "form-control", placeholder: "PC・携帯どちらでも可" %>
                </div>
                <div class="py-3">
                    <%= f.label :password, "パスワード" %>
                    <%= f.password_field :password, class: "form-control", placeholder: "6文字以上" %>
                </div>
                <div class="py-3">
                    <%= f.label :password_confirmation, "パスワード(確認)" %>
                    <%= f.password_field :password_confirmation, class: "form-control", placeholder: "6文字以上" %>
                </div>
                <div class="py-3" style="text-align: center">
                <%= f.submit "登録", class: "btn mx-auto w-50", style: "background-color: sandybrown"%>
                </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>